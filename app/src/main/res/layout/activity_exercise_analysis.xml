<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_back">

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="?android:attr/actionBarSize">

            <Button
                android:id="@+id/bt_analy_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@mipmap/row_back"
                android:drawablePadding="10dp"
                android:text="试题解析"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_analy_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@drawable/collect_status_selector"
                     />

                <ImageView
                    android:id="@+id/iv_analy_share"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/icon_share" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <com.hevttc.jdr.interiew.view.customview.NoCacheViewPager
        android:id="@+id/vp_analysis"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>