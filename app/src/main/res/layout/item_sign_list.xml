<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp"
        app:contentPadding = "8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_sign_item_head"
                    android:background="@mipmap/center_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />
                <TextView
                    android:singleLine="true"
                    android:text="1231321"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_sign_item_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="13sp"
                    android:text="一分钟前"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_sign_item_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="5dp"
                android:background="@color/divider"
                android:text="1231321"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:id="@+id/tv_sign_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:drawableLeft="@drawable/sign_fight_selector"
                        android:button="@null"
                        android:id="@+id/cb_item_fight"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp" />
                </RelativeLayout>
                <ImageView
                    android:gravity="center"
                    android:src="@mipmap/ic_sign_back"
                    android:id="@+id/cb_item_talk"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="25dp" />
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/sign_share_selector"
                    android:gravity="center"
                    android:id="@+id/cb_item_share"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="25dp" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>